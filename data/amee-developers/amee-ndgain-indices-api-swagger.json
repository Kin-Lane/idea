{
    "apiVersion": "2",
    "swaggerVersion": "1.1",
    "basePath": "/api",
    "resourcePath": "https://www.amee.com/nd_gain",
    "apis": [
        {
            "path": "/nd_gain",
            "description": "ND-Gain Notre Dame Global Adaptation Index",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "List ND-Gain indices",
                    "notes": "Returns an array of ND-Gain scores",
                    "responseClass": "NdGain",
                    "nickname": "getNdGain",
                    "parameters": [
                        {
                            "name": "limit",
                            "description": "Number of results per page, max 50, default 20",
                            "paramType": "query",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "integer"
                        },
                        {
                            "name": "page",
                            "description": "Page number of results, max 100, default 1",
                            "paramType": "query",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "integer"
                        },
                        {
                            "name": "iso3",
                            "description": "ISO-3166-3 Country code",
                            "paramType": "query",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "iso2",
                            "description": "ISO-3166-2 Country code",
                            "paramType": "query",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "year",
                            "description": "Year, in YYYY",
                            "paramType": "query",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "scope",
                            "description": "Can be any one of the following values: readiness, indicators, vulnerability",
                            "paramType": "query",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "category",
                            "description": "Can be any one of the following values in NdGain",
                            "paramType": "query",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ],
                    "errorResponses": [
                    ]
                }
            ]
        }
    ],
    "models": {
        "NdGain": {
            "id": "NdGain",
            "properties": {
                "year":{
                  "type": "String",
                  "required": true
                },
                "iso2": {
                  "type": "String",
                  "required": true
                },
                "iso3": {
                  "type": "String",
                  "required": true
                },
                "scope": {
                    "type": "String",
                    "required": true,
                    "allowableValues": {
                        "valueType": "LIST",
